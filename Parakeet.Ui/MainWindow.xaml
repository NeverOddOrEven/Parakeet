        Title="Parakeet" Height="380.4" Width="498.4" ResizeMode="NoResize">
    <Grid x:Name="WelcomeCanvas" Background="#FFEFF2FD">
        <Canvas HorizontalAlignment="Left" Margin="244,141,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpenFileBtn" Content="Open File" HorizontalAlignment="Left" Margin="204,146,0,0" VerticalAlignment="Top" Click="OnOpenDatabaseFile" TouchUp="OnOpenDatabaseFile" Padding="20,10" FontFamily="Segoe UI Semibold" FontSize="18" Width="120"/>
        <Label x:Name="MainWindowTitleLbl" Content="Parakeet" HorizontalAlignment="Left" Margin="158,10,0,0" VerticalAlignment="Top" FontFamily="Segoe UI Black" FontSize="36"/>
        <Button x:Name="NewDatabaseFileBtn" Content="New File" HorizontalAlignment="Left" Margin="79,146,0,0" VerticalAlignment="Top" FontSize="18" FontFamily="Segoe UI Semibold" Padding="20,10" Width="120" Click="OnCreateDatabaseFile" TouchUp="OnCreateDatabaseFile"/>

    </Grid>
</Window>
